<%- include("layout", { title: "Media" , user, body: ` <div class="space-y-10">

  <!-- Dashboard Title -->
  <section class="space-y-3">
    <h1 class="text-3xl font-bold">Media</h1>
    <form id="addForm" class="space-y-4">

      <div>
        <label class="block text-sm font-medium mb-1">YouTube URL</label>
        <input type="url" name="url" id="url" required
          placeholder="https://www.youtube.com/watch?v=... or Playlist"
          class="w-full px-3 py-2 bg-gray-900 border border-gray-700 rounded focus:ring-2 focus:ring-pink-500 focus:outline-none" />
      </div>

      <button type="submit"
        class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded transition">
        Add
      </button>
    </form>
    <!-- Add Video Status Modal -->
    <dialog id="addStatusModal"
      class="backdrop:bg-black/70 rounded-3xl p-0 bg-transparent text-gray-100 w-[500px] border-0"
      style="margin:auto;">
      <div class="border border-white/10 rounded-3xl p-6 shadow-[0_0_55px_rgba(10,0,20,0.9)]" style="background-color: rgba(10, 4, 22, 0.95);">
        <h3 class="text-2xl font-semibold text-white mb-4">Adding Videos…</h3>

        <div id="addMeta" class="flex gap-4 items-center mb-4 hidden">
          <img
            id="addMetaThumb"
            class="w-24 h-24 rounded-2xl object-cover bg-black/60 border border-white/10 shadow-[0_0_25px_rgba(15,0,25,0.4)]"
            src=""
            alt="Thumbnail"
          />

          <div class="flex flex-col">
            <div id="addMetaArtist" class="text-lg font-semibold text-white"></div>
            <div id="addMetaTrack" class="text-sm text-gray-300"></div>
          </div>
        </div>

        <div class="space-y-3">
          <div id="addStatusText" class="text-sm text-purple-100">
            Waiting…
          </div>

          <div class="w-full bg-black/40 border border-white/10 rounded-full h-3 overflow-hidden">
            <div id="addStatusBar"
                 class="bg-purple-500 h-3 transition-all duration-200"
                 style="width: 0%"></div>
          </div>

          <pre id="addStatusLog"
               class="hidden p-3 bg-black/60 border border-white/10 rounded-xl text-xs text-purple-100 overflow-auto h-60"></pre>
        </div>

        <div class="flex justify-end mt-4">
          <div class="flex gap-3">
            <button id="addStatusToggleLog"
              class="px-3 py-2.5 rounded-xl border border-white/10 bg-black/60 text-sm text-purple-100 hover:bg-purple-900/40 transition">
              Show log
            </button>

            <button id="addStatusClose"
              class="px-4 py-2.5 rounded-xl bg-gradient-to-r from-purple-500 to-fuchsia-500 text-sm font-semibold shadow-neon hover:brightness-110 transition text-white">
              Close
            </button>
          </div>
        </div>
      </div>
    </dialog>
  </section>


  <!-- Videos -->
  <section class="space-y-4">
    <h2 class="text-xl font-semibold">Videos</h2>
    <div class="flex flex-col sm:flex-row gap-3 sm:items-center">
      <input
        type="text"
        id="videoSearch"
        placeholder="Search title, artist, genre…"
        class="w-full sm:max-w-sm px-3 py-2 bg-gray-900 border border-gray-700 rounded focus:ring-2 focus:ring-pink-500 focus:outline-none text-sm"
      />
    </div>

    <!-- Native dialog modal -->
    <dialog id="videoModal"
      class="backdrop:bg-black/70 rounded-3xl p-0 bg-transparent text-gray-100 w-[420px] hidden border-0"
      style="display:none;">
      <div class="border border-white/10 rounded-3xl p-6 shadow-[0_0_55px_rgba(10,0,20,0.9)]" style="background-color: rgba(10, 4, 22, 0.95);">
        <h3 id="videoModalTitle" class="text-2xl font-semibold mb-4 text-white">Modal</h3>

        <div id="videoModalContent" class="text-gray-200 mb-6">
          <!-- JS injects edit/delete content here -->
        </div>

        <div class="flex justify-end gap-3">
          <button id="videoModalCancel" class="px-4 py-2.5 rounded-xl border border-white/10 bg-black/60 text-sm text-purple-100 hover:bg-purple-900/40 transition">Cancel</button>

          <button id="videoModalConfirm" class="px-4 py-2.5 rounded-xl bg-gradient-to-r from-purple-500 to-fuchsia-500 text-sm font-semibold shadow-neon hover:brightness-110 transition text-white">Confirm</button>
        </div>
      </div>
    </dialog>

    <div class="overflow-x-auto">
      <table id="videosTable" class="min-w-full border border-gray-700 rounded text-sm">
        <thead class="bg-gray-800">
          <tr>
            <th class="px-3 py-2 border border-gray-700">ID</th>
            <th class="px-3 py-2 border border-gray-700">Title</th>
            <th class="px-3 py-2 border border-gray-700">Artist</th>
            <th class="px-3 py-2 border border-gray-700">Year</th>
            <th class="px-3 py-2 border border-gray-700">Genre</th>
            <th class="px-3 py-2 border border-gray-700">Ident?</th>
            <th class="px-3 py-2 border border-gray-700">Source</th>
            <th class="px-3 py-2 border border-gray-700">Actions</th>
          </tr>
        </thead>
        <tbody id="videosTableBody" class="divide-y divide-gray-800">
          <!-- dashboard.js will populate rows like:
          <tr>
            <td>1</td>
            <td>Song title</td>
            <td>Artist</td>
            <td>2024</td>
            <td>Pop</td>
            <td>No</td>
            <td>YouTube</td>
            <td class="px-3 py-2 flex gap-2">
              <button data-id="1" class="editBtn px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white rounded text-sm">Edit</button>
              <button data-id="1" class="deleteBtn px-3 py-1 bg-red-600 hover:bg-red-700 text-white rounded text-sm">Delete</button>
            </td>
          </tr>
          -->
        </tbody>
      </table>
    </div><div id="videoPagination" class="flex items-center justify-between pt-4 text-sm">
      <div id="videoPageInfo" class="text-gray-400">
        Showing 0–0 of 0
      </div>
      <div class="flex items-center gap-2">
        <button
          id="videoPrev"
          class="px-3 py-1 bg-gray-700 hover:bg-gray-600 rounded disabled:opacity-40 disabled:cursor-not-allowed">
          Prev
        </button>
        <button
          id="videoNext"
          class="px-3 py-1 bg-gray-700 hover:bg-gray-600 rounded disabled:opacity-40 disabled:cursor-not-allowed">
          Next
        </button>
      </div>
    </div>
    
  </section>

  <!-- Modal Lightbox -->
  <div id="modalOverlay" class="hidden fixed inset-0 bg-black/70 flex items-center justify-center z-50">

    <div id="modalBox" class="border border-white/10 rounded-3xl p-6 w-full max-w-lg shadow-[0_0_55px_rgba(10,0,20,0.9)]" style="background-color: rgba(10, 4, 22, 0.95);">

      <h2 id="modalTitle" class="text-2xl font-bold mb-4 text-white">Modal</h2>

      <div id="modalContent" class="text-gray-200 mb-6">
        <!-- dashboard.js will inject form or confirmation UI here -->
      </div>
      <div class="flex justify-end gap-3">
        <button id="modalCancel" class="px-4 py-2.5 rounded-xl border border-white/10 bg-black/60 text-sm text-purple-100 hover:bg-purple-900/40 transition">
          Cancel
        </button>

        <button id="modalConfirm" class="px-4 py-2.5 rounded-xl bg-gradient-to-r from-purple-500 to-fuchsia-500 text-sm font-semibold shadow-neon hover:brightness-110 transition text-white">
          Confirm
        </button>
      </div>
    </div>
  </div>

  <script>
    // Dialog helpers for dashboard.js
    const videoModal = document.getElementById("videoModal");
    const videoModalTitle = document.getElementById("videoModalTitle");
    const videoModalContent = document.getElementById("videoModalContent");
    const videoModalCancel = document.getElementById("videoModalCancel");
    const videoModalConfirm = document.getElementById("videoModalConfirm");

    window.openVideoModal = (title, contentHTML, confirmCallback) => {
      videoModalTitle.textContent = title;
      videoModalContent.innerHTML = contentHTML;

      function cleanup() {
        videoModalConfirm.removeEventListener("click", onConfirm);
        videoModalCancel.removeEventListener("click", onCancel);
      }

      function onConfirm() {
        confirmCallback();
        cleanup();
        videoModal.close();
      }

      function onCancel() {
        cleanup();
        videoModal.close();
      }

      videoModalConfirm.addEventListener("click", onConfirm);
      videoModalCancel.addEventListener("click", onCancel);

      videoModal.showModal();
    };
  </script>

  </div>
  ` }) %>
