{
  "name": "FluxTV",
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev:css": "npx tailwindcss -i ./public/tailwind.css -o ./public/styles.css",
    "build:js": "npx esbuild ./src/app.js --bundle --minify --outfile=./public/app.js",
    "build": "npm run build:js && npx tailwindcss -i ./public/tailwind.css -o ./public/styles.css && enmav --update-version && git push",
    "release": "standard-version",
    "build:asv": "enmav --update-version"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "express-session": "^1.17.3",
    "flowbite": "^4.0.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "qs": "^6.14.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "esbuild": "^0.27.1",
    "postcss": "^8.5.6",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.14"
  }
}